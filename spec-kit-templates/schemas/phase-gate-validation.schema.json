{
  "$schema": "http://json-schema.org/draft-07/schema#", 
  "title": "Phase Gate Validation Schema",
  "type": "object",
  "required": ["title", "type", "standard", "phase_transition", "version", "date", "author", "status", "compliance"],
  "properties": {
    "title": {"type": "string", "minLength": 1},
    "type": {"const": "phase_gate_validation"},
    "standard": {"type": "string", "pattern": "^IEEE\\s+\\d{3,4}(\\.\\d+)?-\\d{4}$"},
    "phase_transition": {"type": "string", "pattern": "^\\d{2}-to-\\d{2}$"},
    "version": {"type": "string", "pattern": "^\\d+\\.\\d+$"},
    "date": {"type": "string", "pattern": "^20[2-9]\\d-\\d{2}-\\d{2}$"},
    "author": {"type": "string", "minLength": 1},
    "status": {"enum": ["active", "completed", "failed"]},
    "compliance": {
      "type": "object",
      "required": ["standard", "gate"],
      "properties": {
        "standard": {"const": "ISO/IEC/IEEE 12207:2017"},
        "gate": {"type": "string", "pattern": "^Phase \\d{2} â†’ Phase \\d{2}$"}
      }
    }
  },
  "additionalProperties": true
}