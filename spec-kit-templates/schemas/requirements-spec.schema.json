{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Requirements Specification Schema",
  "type": "object",
  "required": ["specType", "standard", "phase", "version", "author", "date", "status"],
  "properties": {
    "specType": {"const": "requirements"},
    "standard": {"pattern": "29148"},
    "phase": {"const": "02-requirements"},
    "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+"},
    "author": {"type": "string", "minLength": 1},
    "date": {"type": "string", "pattern": "^20[2-9]\\d-\\d{2}-\\d{2}$"},
    "status": {"enum": ["draft", "review", "approved", "deprecated"]},
    "traceability": {
      "type": "object",
      "required": ["stakeholderRequirements"],
      "properties": {
        "stakeholderRequirements": {
          "type": "array",
            "items": {"type": "string", "pattern": "^StR-\\d{3}$"},
            "minItems": 1
        }
      }
    }
  },
  "additionalProperties": true
}