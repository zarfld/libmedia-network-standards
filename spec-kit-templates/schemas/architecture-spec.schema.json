{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Architecture Specification Schema",
  "type": "object",
  "required": ["specType", "standard", "phase", "version", "author", "date", "status", "traceability"],
  "properties": {
    "specType": {"const": "architecture"},
    "standard": {"pattern": "42010"},
    "phase": {"const": "03-architecture"},
    "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+"},
    "author": {"type": "string", "minLength": 1},
    "date": {"type": "string", "pattern": "^20[2-9]\\d-\\d{2}-\\d{2}$"},
    "status": {"enum": ["draft", "review", "approved", "deprecated"]},
    "traceability": {
      "type": "object",
      "required": ["requirements"],
      "properties": {
        "requirements": {
          "type": "array",
          "items": {"type": "string", "pattern": "^REQ-(F|NF)-[0-9]{3}$"},
          "minItems": 1
        }
      }
    }
  },
  "additionalProperties": true
}