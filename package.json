{
  "name": "libmedia-network-standards",
  "version": "1.0.0",
  "description": "IEEE/ISO/IEC Media Networking Standards Implementation",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zarfld/libmedia-network-standards.git"
  },
  "keywords": [
    "ieee",
    "iso",
    "iec",
    "networking",
    "avb",
    "tsn",
    "ptp",
    "avdecc",
    "avtp",
    "standards",
    "media",
    "audio",
    "video"
  ],
  "author": "IEEE Standards Implementation Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zarfld/libmedia-network-standards/issues"
  },
  "homepage": "https://github.com/zarfld/libmedia-network-standards#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "buffer": "^6.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/05-implementation/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "05-implementation/src/**/*.{ts,js}",
      "!05-implementation/src/**/*.d.ts",
      "!05-implementation/src/**/*.test.{ts,js}",
      "!05-implementation/src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "prettier/prettier": "error",
      "complexity": [
        "error",
        10
      ],
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}